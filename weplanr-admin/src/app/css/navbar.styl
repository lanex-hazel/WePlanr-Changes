.nav-list
  border-bottom 1px solid $border
  margin-bottom 30px
  li
    padding 30px
    a
      font-weight 500
      text-transform uppercase
      color $secondary-text
      opacity 0.6
      padding 0 15px 15px
      &.active, &:hover
        color $primary-text
        opacity 1
        border-bottom 2px solid $primary-hover