modal
  display none
  .modal
    position fixed
    top 50%
    right 0
    bottom 0
    left 50%
    transform translate(-50%, -50%)
    display block
    z-index 1000
    height 100%
    width 512px
    max-width 98%
    overflow-y inherit

    .modal-body
      padding 0
      background #fff
      margin-top 7rem
      position relative

      section
        color rgb(98, 98, 98)
        line-height 1.2
        text-align center
        font-size 2.3rem
        font-weight 100
        padding 2rem 8rem 0
        &:nth-of-type(even)
          background-color rgb(255, 255, 255)
          box-shadow 0px 1px 76px 0px rgba(0, 0, 0, 0.05)
        &:first-of-type
          padding 2.8rem 9rem 1rem
        &:last-of-type
          padding-bottom 2.8rem
        .title
          font-weight bold
        p
          margin-bottom 13px
          line-height 1.5
      .icon
        position absolute
        right 15px
        top 13px
        &:before
          font-size 1.4rem
          padding 0.3rem

  .modal-backdrop
    position fixed
    top 0px
    left 0px
    height 100%
    width 100%
    background #000
    z-index 900
    opacity 0.75

body.modal-open
  overflow hidden