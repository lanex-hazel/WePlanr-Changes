#message-page
  .msg-date
    color: #999
    font-size: 10.5px
    text-align: center
    text-transform: uppercase
    margin-bottom: 1.125rem

  ::-webkit-scrollbar
    display: none

  @media (min-width: 992px)
    .hide
      display: block !important
  @media (max-width: 991px)
    .no-margin-top
      margin-top 0 !important

  #chat-container
    height: 600px
    background-color: #fff

#chatlist, #chatbox
  border-top: 1px solid #f5f5f5
  ::-webkit-input-placeholder
    color: #aaa
  ::-webkit-input-placeholder
    color: #aaa
  ::-moz-placeholder
    color: #aaa
  :-ms-input-placeholder
    color: #aaa
  input:focus, textarea:focus
    &::-webkit-input-placeholder
       color: transparent
    &::-webkit-input-placeholder
       color: transparent
    &::-moz-placeholder
       color: transparent
    &:-ms-input-placeholder
      color: transparent

#chatlist
  padding: 0
  margin: 0
  height: 100%
  overflow-y: scroll
  background-color: #fff
  border-right: 1px solid #fdfdfd

  .search-container
    position: relative
    margin: auto
    padding: 1rem 24px
    .icon
      position: absolute
      font-size: 15px
      &:before
        color: #ce4257
      &.icon-search
        top: 9px
        left: 28px
      &.icon-exit
        top: 7px
        right: 0
        &:before
          border: none
    input
      width: 100%
      height: 30px // fix safari issue not showing whole "y"
      background-color: transparent
      border-top: none
      border-right: none
      border-left: none
      border-bottom: 2px solid #E5E5E5
      outline: none
      padding-left: 24px
      padding-bottom: 5px
      text-align: center
      font-size: 14px

  .tab
    text-align: center
    span
      position: relative
      padding: 6px 32px
      border: 1px solid #e3e3e3
      background-color: white
      color: #282A2D
      font-size: 12px
      font-weight: 500
      +respond-to(0,320px)
        padding 6px 12px
      &:first-child
        border-radius: 16px 0 0 16px
        border-right: none
        .unread
          left: 0
      &:last-child
        border-radius: 0 16px 16px 0
        border-left: none
        .unread
          right: 0
      &.active
        background-color: $green-btn
        color: white
      .unread
        position: absolute
        top: -8px
        padding: 3px
        width: 20px
        height: 20px
        background-color: #3f4349
        color: white
        border: none
        border-radius: 50%
        font-size: 11px

  .service
    color: #999
    font-size: 10.5px
    margin-left: 24px
    text-transform: uppercase

  .chat
    color: #444
    padding: 1rem 24px 1rem 0

    &.active, &:hover
      background-color: #f6f6f6

    > *
      vertical-align: top

    .chat-profile-pic
      background-color: $white
      display: inline-block
      border-radius: 50%
      width: 32px
      height: 32px
      background-size: 100% 100%
      -webkit-background-size: 100% 100%
      -moz-background-size: 100% 100%
      -o-background-size: 100% 100%
      background-repeat: no-repeat
      margin-right: 0.5rem
      &.default
        background-color: $default-photo-bg
        background-size: 98%
        background-position: center
    .chat-online-status
      display: inline-block
      vertical-align: -webkit-baseline-middle
      margin-left: 1.25rem
      margin-right: 0.5rem
      font-size: 20px
      color: transparent
      &.online
        color: #99d98b
    .chat-info
      display: inline-block
      padding-left: 1rem
      width: calc(100% - 90px)

      .receiver
        position: relative
        height: 26px
        > *
          display: inline-block
          position: absolute
          bottom: 0
          &.receiver-name
            font-size: 18px
            text-overflow: ellipsis
            white-space: nowrap
            overflow: hidden
            max-width: 75%
            height: 25px
          &.chat-timestamp
            color: #999
            font-size: 14px
            right: 0

#chatbox
  height: 100%
  position: relative
  background-color: white
  color: #444
  margin: 0
  padding: 0

  .chat-header
    background-color: #f6f6f6
    padding: 16px 0
    text-align: center
    position: relative

    &.mobile
      background-color: white
      display: none
      padding: 10px 0
      @media (max-width: 991px)
        display: block
      .chat-header-pic
        position: absolute
        right: 6px
        top: 20px

    .back-to-conversations
      position: absolute
      left: 23px
      top: 28px
      color: #d44c62
      height: 20px

    .chat-header-pic
      vertical-align: top
      background-color: $white
      display: inline-block
      border-radius: 50%
      width: 32px
      height: 32px
      background-size: 100% 100%
      -webkit-background-size: 100% 100%
      -moz-background-size: 100% 100%
      -o-background-size: 100% 100%
      background-repeat: no-repeat
      margin-right: 10px
      &.default
        background-color: $default-photo-bg
        background-size: 98%
        background-position: center

    .chat-header-name
      display: inline-block
      font-size: 20px
      max-width: 70%

    .chat-header-online-indicator
      margin-right: 5px
      color: #ce4257
      &.online
        color: $green-btn
    .chat-header-status
      font-size: 11px


  .msg-list
    padding: 1rem
    max-height: calc(100% - 150px)
    overflow-y: scroll

  .msg
    margin: 1.125rem 2rem

    > *
      vertical-align: top

    &.sent
      position: relative
      text-align: right
      .msg-profile-pic
        position: absolute
        bottom: -6px
        right: 0
      .contents
        margin-right: 45px
        > .content > span
          background-color: #02b7f1
          color: white
          text-align: left

    .contents
      display: inline-block
      width: calc(100% - 41px)
      .content
        margin-bottom: 18px
        > span
          display: inline-block
          background-color: #f9f9f9
          border-radius: 12px
          padding: 6px 19px
      &.quote
        width: calc(100% - 44px)
        background-color: #f9f9f9
        border-radius: 15px
        padding: 20px
        text-align: left
        .content
          margin: 0
        [class^="col-"]
          padding: 0
          font-weight: 300
          line-height: 2.4rem
        .accept-btn, .decline-btn
          width: 135px
          border: none
          border-radius: 9px
          padding: 6px 0
          max-width: 45%
          +respond-to(0, 480px)
            font-size: 12px
          +respond-to(0, 320px)
            font-size: 9px
            padding: 2px 0
        .grey
          color: #a3a3a3
        a
          color: #d44c62
          +respond-to(0, 320px)
            width: 60px
            white-space: nowrap
            text-overflow: ellipsis
            overflow: hidden

    .msg-profile-pic
      background-color: $white
      display: inline-block
      border-radius: 50%
      width: 32px
      height: 32px
      background-size: 100% 100%
      -webkit-background-size: 100% 100%
      -moz-background-size: 100% 100%
      -o-background-size: 100% 100%
      margin-right: 0.5rem
      vertical-align: bottom
      margin-bottom: 25px
      background-repeat: no-repeat
      &.default
        background-color: $default-photo-bg
        background-size: 98%
        background-position: center

    .seen, .timestamp
      color: rgb(186, 193, 197)

  .new-msg
    background-color: white
    position: absolute
    bottom: 0
    width: 100%
    border-top: 1px solid #eee
    padding: 1rem
    text-align: center

    textarea
      height: 26px
      color: black
      font-size: 18px
      width: 100%
      border: none
      padding: 0
      margin-top: 5px
      resize: none
      outline: none
      -webkit-box-shadow: none
      -moz-box-shadow: none
      box-shadow: none
    #new-msg-input
      width: calc(100% - 170px) !important
      @media (max-width: 992px)
        width: calc(100% - 102px) !important
      @media (max-width: 767px)
        width: calc(100% - 50px) !important
        height: 40px

    // #send-msg
    //   background-color: $green-btn
    #raise-quote
      background-color: #f3d4d8
    #send-msg, #raise-quote
      color: white
      font-size: 14px
      font-weight: 500
      padding: 10px 30px
      vertical-align: top
      outline: none
      @media (max-width: 767px)
        border-radius: 50%
        width: 40px
        height: 40px
        padding: 0
        i.fa
          margin: 0
          font-size: 17px

#update-abn-modal
  p
    font-size 20px
  .btn
    border-radius 24px
    padding 10px 30px
