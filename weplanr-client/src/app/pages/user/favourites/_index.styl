#favourites-container
  margin: 25px 5%
  position: relative
  .list
    height: 505px
    overflow: auto
    width: 100%
    &::-webkit-scrollbar
      display: none
    > li
      width: 221px
      max-height: 293px
      margin: 0 19px 45px
      position: relative
      display: inline-table
      +respond-to(0,768px)
        width: 282px
      +respond-to(0,480px)
        width: 100%
        margin-bottom: 70px
        margin-right: 0
        margin-left: 0
      > a
        position: absolute
        bottom: 105px
        right: 15px
        z-index: 1
        width: 36px
        border-radius: 50%
        background-color: rgba(255,255,255,0.6)
        line-height: 30px
        &:before
          background-color: initial
          padding: 0
          margin: 5.5px
      .cover-photo
        height: 192px
        width: 100%
        margin-bottom: 5px
        background-repeat: no-repeat
        background-size: cover
        background-position: center
        position: relative
        padding: 5.2em 2em
        background-color: $white
        &.default
          background-color: $default-photo-bg
          background-size: 95%
        +respond-to(0,480px)
         height: 250px
         padding-top: 7.2em
      .avatar
        width 42px
        height 42px
        background-size cover
        background-position center
        background-repeat: no-repeat
        border-radius 50%
        display: inline-block
        background-color: $white
        &.default
          background-color: $default-photo-bg
          background-size: 98%
      .info
        display: inline-block
        margin-left: 5px
        > li
          display: block
          max-width: 165px
          white-space: nowrap
          overflow: hidden
          text-overflow: ellipsis
          font-size: 1.8rem
          &.icon-map-marker
            color: rgba(39,43,47,0.6)
            font-size: 1.4rem
            &:before
              font-size: 11px
              margin-right: 3px
      .services
        overflow: hidden
        height: 32px
        > li
          border solid 1px rgba(39, 43, 47, 0.5)
          padding 0.5rem 1rem
          width auto
          color $primary-text
          background-color $white
          font-size 1rem
          text-transform uppercase
          margin 2px
          margin-top: 4px
  .fadeout
    position absolute
    bottom calc( 100% - 578px)
    height 9rem
    width 100%
    z-index 2
    background: -webkit-linear-gradient(rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 100%)
    background-image -moz-linear-gradient(rgba(255, 255, 255, 0) 0%,rgba(255, 255, 255, 1) 100%)
    background-image -o-linear-gradient(rgba(255, 255, 255, 0) 0%,rgba(255, 255, 255, 1) 100%)
    background-image linear-gradient(rgba(255, 255, 255, 0) 0%,rgba(255, 255, 255, 1) 100%)
    background-image -ms-linear-gradient(rgba(255, 255, 255, 0) 0%,rgba(255, 255, 255, 1) 100%)
    +respond-to(0,1200px)
      bottom: calc( 100% - 565px)