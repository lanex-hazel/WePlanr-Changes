.dashboard-container
  > .content-container
    position relative
    padding 0.5rem
    +respond-to(0, 992px)
      padding: 0

  .editable
    color $primary-hover
    font-weight bold
    font-size 1.1rem
    z-index 1

  .white-overlay
    box-shadow inset 2000px 0 0 0 rgba(255, 255, 255, 0.5)

  .custom-overlay
    box-shadow inset 2000px 0 0 0 rgba(39,43,47,0.3)

  #dashboard-profile, #dashboard-profile-blocks
    width: 50%
    max-width 569px
    display: inline-block
    vertical-align: top
    +respond-to(0,1170px)
      width 100%
      display: block
      margin: auto

  #dashboard-profile-blocks > .item
    width calc(99% / 2)
    margin 0 auto
    display: inline-block
    vertical-align: top
    &:nth-child(n+3)
      margin-top 5px
    &:nth-child(even)
      margin-left: 2px
    +respond-to(0,1170px)
      display: block
      margin-top: 30px !important
      width: calc(100% - 72px)
      &:nth-child(even)
        margin-left: auto
    +respond-to(0,768px)
      &:first-child
        margin-top: 0 !important
    +respond-to(0,320px)
      margin-top: 15px !important
      width 280px

  #dashboard-profile > #profile
    height 565px
    background-color #f8f8f8
    margin-right 5px
    padding 1.5rem
    text-align center
    font-size 1.5rem
    background-size cover
    background-repeat no-repeat
    background-position center
    +respond-to(0, 1170px)
      margin auto
    +respond-to(0, 992px)
      height 460px
      max-width 508px
    +respond-to(0, 440px)
      height 510px !important
    > .with-content
      color $white
      padding-top 4rem
      +respond-to(0, 992px)
        padding-top 0.5rem
      > .contact-details
        white-space: nowrap
        overflow: hidden
        text-overflow: ellipsis
      .icon-map-marker
        &:before
          color $white
          font-size 10px
        &.loc
          color $secondary-text
          &:before
            color $secondary-text
            font-size 10px
            margin-right 5px
      > p
        color $white !important
        font-size 3.5rem
        +respond-to(0,992px)
          font-size 2.8rem
          white-space: nowrap
          text-overflow: ellipsis
          overflow: hidden
    p
      font-size 3rem
      font-weight 100
      +respond-to(0,992px)
        font-size 2rem
      &.welcome-text
        font-size 1.3rem
        color rgba(0, 0, 0, 0.6)
        margin-bottom 5px
        +respond-to(0,992px)
          font-size 1rem !important
      > .partner
        width 40%
        font-weight 100
        color rgba(0, 0, 0, 0.4)
        &.disabled
          width 40%
    .address:before
        font-size 1rem
    .upload:before
        font-size 1.1rem
        padding 1.5rem
        line-height 5.5
    .upload > .upload-text > a
        font-size 1.15rem
        color $primary-hover
    +respond-to(0,992px)
      .address
        display inline-block
        font-size 1.3rem
        &:before
          font-size 0.5rem
      .upload:before
        font-size 1.6rem
        padding 0.8rem
        line-height 2.5
      .upload > .upload-text > a
        font-size 0.8rem

    > .card
      width 500px
      height 196px
      margin auto
      padding 2.3rem 2.5rem
      background-color $white
      +respond-to(993px, 1024px)
        width 378px !important
      +respond-to(0, 992px)
        width 350px
        min-height 160px
        +respond-to(480px, 992px)
          height: 163px !important
        +respond-to(0px, 400px)
          width 286px !important
        .col-xs-6
          padding-left 0.7rem
          padding-right 0.7rem
      > div > .card-box
        height 97px
        position: relative
        +respond-to(0,992px)
          height: 92px
          +respond-to(480px, 992px)
            height: 72px !important
      > div > .card-box > p
        font-size 14px
        font-weight 300
        color #484a4d
        line-height 1.5
        height 84px
        overflow auto
        margin: 0
        position: absolute
        top: 50%
        left: 50%
        -ms-transform: translate(-50%, -50%)
        transform: translate(-50%, -50%)
        width: 100%
      a
        width 95%
        padding: 5px 18px
        border-radius: 7px
        color: #ffffff
        font-size: 12px
        font-weight: 600

    .countdown > .countdown-item
        font-size 3.5em
        font-weight 200
        line-height 0.8
        padding-left 0.5rem
        padding-right 0.5rem
        -webkit-font-smoothing antialiased
        +respond-to(0,992px)
          font-size 4rem !important
          line-height 1.2
          width 12%
          padding 0
        > .countdown-label-item
          font-size 1.3rem
          margin 15px
          opacity 0.6
          font-weight 400
          display block
          +respond-to(0,992px)
            font-size 1.1rem
            margin 0

  //Wedding date tile
  #dashboard-profile-blocks > .item > .calendar
    background-color $light-green
    margin 0 auto
    span
      display block
      position relative
      top 0
      &.day
        font-size 10em
        font-weight 100
      &.date
        top -35px
        font-size 1.7rem
        font-weight 100
        text-transform capitalize

  //Budget tile
  #dashboard-profile-blocks > .item > .budget
    background-color $light-pink
    .budget-total
      padding-top 4rem
      border-bottom 1px solid
      font-size 55px
      text-align right
      font-weight 100
      p
        margin 0
        overflow: hidden
        text-overflow: ellipsis
        &::first-letter
          font-size 28px
    .budget-summary
      margin-top 2rem
      font-size 1.2rem
      font-weight 400
      text-transform capitalize
      .budget-price-item
        font-weight bold
        text-align right
      table
        position relative
        bottom -20px
        border-collapse collapse
        table-layout fixed
        width 100%
        > .fa-usd
          font-size 1.1rem

  //Todo list tile
  #dashboard-profile-blocks > .item > .todo
    background-color $light-orange
    i
      color $border
    .todo-list
      padding 17px 0
    .todo-list-item
      font-size 14px
      display block
      margin 10px
      text-decoration underline
      overflow hidden
      text-overflow ellipsis

  //Messages tile
  #dashboard-profile-blocks > .item > div > .messages
    background-color $light-blue
    padding: 30px 15px !important
    > .title
      margin-left: 12px
    > .badge-success
      margin-right: 12px
    > .message-indicators
      margin: auto
      text-align: center
      span.indicator
        display: inline-block
        border-radius: 50%
        border: 1px solid #d7d7d7
        margin: 16px 4px
        height: 10.5px
        width: 10.5px
        &.active
          background-color: #df6476
          border-color: #df6476
    .contact
      display inline-block
      vertical-align middle
      padding 0 8px
      width: 177px
      overflow: hidden
      white-space: nowrap
      text-overflow: ellipsis
      > .title-name
        font-size: 20px
        font-weight: 500
    .icon-map-marker:before
      color: #b6b6b6
      font-size: 8px
    .location
      padding-left 3px
      color: #b6b6b6
      font-size 10px
      font-weight 100
      text-transform: capitalize
    .message
      background-color white
      margin 18px 0 3px
      padding 10px
      height 75%
      overflow hidden
      > .caption > *
        vertical-align: top
      > .caption > .dashboard-profile-photo
        background-color: $white
        display: inline-block
        border-radius: 50%
        width: 45px
        height: 45px
        background-repeat: no-repeat
        background-size: 100% 100%
        -webkit-background-size: 100% 100%
        -moz-background-size: 100% 100%
        -o-background-size: 100% 100%
        &.default
          background-size: 98%
          background-color: $default-photo-bg
          background-position: center
      > .message-text
        font-size 12px
        padding 5px
        height: 100px
        line-height 1.6
        overflow hidden
        text-overflow ellipsis
        display -webkit-box
        -webkit-box-orient vertical
        -webkit-line-clamp 5
        white-space normal

  .budget, .todo, .messages, .calendar
    color #2f353c
    height 280px
    padding 30px
    white-space nowrap
    .title
      font-weight 500
      text-transform uppercase
    .arrow-link
      color $primary-hover !important
      font-size 18px
      padding 0.5rem 1rem
      border-radius 60%
      border 2px solid rgba(47, 53, 60, 0.102)
      margin 0

  #dashboard-suggestion
    width: 100%
    +respond-to(769px, 1200px)
      width: (@width - 5)
      margin: auto
    > .vendors-container
      height: 350px
      position: relative
      +respond-to(0, 992px)
        height: 439px
    > .vendors-container > .label
      color: $light-black
      font-size: 1.5rem
      font-weight: bold
      line-height: 2
      +respond-to(0, 320px)
        font-size: 1.2rem
      &.no-data
        display: block
        font-weight: 400
        position: absolute
        top: 50%
        left: 50%
        -ms-transform: translate(-50%, -50%)
        transform: translate(-50%, -50%)
        width: 100%
      .count
        @extend .success
    > .vendors-container > .see-more
      color: $primary-hover
      line-height: 2.4
    > .vendors-container > .searched-results
      margin-top: 30px
      +respond-to(0, 992px)
        white-space: nowrap
        overflow: hidden
    > .vendors-container > .searched-results > .items
      width: calc( calc(100% / 4) - 20px)
      // background-color: blue
      display: inline-block
      margin: 0 13px
      z-index: -1
      &:nth-child(4n+1)
        margin-left 0 !important
      &:nth-child(4n+4)
        margin-right 0 !important
      +respond-to(0, 1200px)
        width: calc( calc(100% / 3) - 18px)
        &:nth-child(3)
          margin-right: 0
        &:nth-child(4)
          display: none
      +respond-to(0, 768px)
        margin: 0
        width: 253px
        white-space nowrap
        overflow hidden
        &:nth-child(4)
          display: inline-block
      > .business-photo
        position: relative
      > .business-photo > .cover-photo
        background-size cover
        background-repeat no-repeat
        width 100%
        height 195px
        background-color: $white
        &.default
          background-color: $default-photo-bg
          background-size: 95%
          background-position: center
        +respond-to(0,768px)
          height: 284px
      > .business-photo > .fave-btn, > .business-photo > .unfave-btn
        position: absolute
        bottom: 1.1rem
        right: 1.6rem
        background-color: rgba(255,255,255,0.6)
        border-radius: 50%;
        text-align: center
        width: 52px
        &:before
          font-size: 1.8rem
          font-weight: normal
          line-height: 50px
          padding: 0
          z-index: 99
      > .business-photo > .fave-btn:before
        @extend .icon-heart:before
      > .business-photo > .unfave-btn:before
        @extend .icon-heart-fave:before
        font-size 2.1rem
      > .vendor-details
        margin-top: 15px
      > .vendor-details > .avatar-photo
        width 42px
        height 42px
        background-size cover
        background-position center
        background-repeat: no-repeat
        background-color: $white
        border-radius: 50%
        display: inline-block
        &.default
          background-size: 98%
          background-color: $default-photo-bg
      > .vendor-details > .business-info
        display: inline-block
        margin-left: 10px
        vertical-align: top
        > .name
          display: block
          font-size: 1.8rem
          overflow: hidden
          text-overflow: ellipsis
          white-space: nowrap
          width: 191px
        > .location
          color: rgba(39,43,47,0.6)
          font-size: 1.4rem
          line-height: 0.8
          &:before
            @extend .icon-map-marker:before
            font-size: 11px
            font-weight: normal
      > .vendor-details > .services
        height: 30px
        overflow: hidden
        > .item
          display: inline-block
          border: solid 1px rgba(39,43,47,0.5)
          padding: 0.5rem 1rem
          width: auto
          color: #272b2f
          background-color: #fff
          font-size: 1rem
          text-transform: uppercase
          margin: 2px
      +respond-to(0, 768px)
        > .vendor-details
          margin-left: 10px

//Dashboard welcome modal
#welcome-popup
  position absolute
  top 50%
  left 50%
  width 99.2%
  height 98.5%
  z-index 10
  transform translate(-50%, -50%)
  background-color rgba(191, 229, 244, 0.8)
  +respond-to(0, 768px)
    height 100%
    a
      margin 0 !important
      padding 1rem !important
    p.welcome
        line-height 1.5 !important
        font-weight 400 !important
  .dialog
    width 70%
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
    +respond-to(0, 768px)
      position initial
      width 90%
      transform initial
      top initial
      left initial
      margin 4rem auto
    section
      background-color #ffffff
      text-align center
      font-size 2rem
      padding 3rem 1.5rem
      &:nth-child(odd)
        background-color #f7f8f9
      &:nth-child(2)
        font-size 1.3rem
      +respond-to(0, 768px)
        font-size 1.8rem
        padding-right 2rem
        padding-left 2rem
  .box
    background-color $white
    padding 3rem 7rem
    text-align center
  p
    color rgba(0, 0, 0, 0.6)
    line-height 1.33
    font-size 1.7rem
  h2, p.welcome
    color #000
    font-weight 300
    line-height 2
    -webkit-font-smoothing antialiased
  b, span
    color $white
    font-size 1.5rem
    line-height 4
  a
    font-weight bold
    width 80%
    margin-top 3rem
    margin-bottom 2rem
    padding 1.5rem
  .icon:after
    color $white
