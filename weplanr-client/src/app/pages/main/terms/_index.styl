#term-conditions
  max-width: 780px
  width: calc(100% - 25px)
  padding: 30px 12px 60px
  margin: auto
  word-break: break-word
  font-family: Roboto,arial,sans-serif
  #logo
    font-size: 30px
    font-weight: 100
    span:first-child
      color: #7e2036
    span:last-child
      color: #383334
  a
    color: #428bca
    text-decoration: underline
  b
    padding-top: 18px
  table
    td
      vertical-align: top
      padding-top: 18px
      font-weight: 400
      width: 100%
      &:first-child
        //padding-right: 30px
        width: 6%
        min-width: 30px
      &[colspan="2"]
        padding-top: 1.325rem
        font-weight: bold

  .services, .services-rates
    width: 100%
    tr td, thead th
      border: 1px solid
      width: 50%
  .services-rates
    tr td, thead th
      width: 33.33%
  ul
    li
      display: block
  .list li
    line-height: 3
  .icon
    padding-right: 30px