header(params="header_params")
.main-content
  .content-container
    #onboard
      div
        section#landing
         .landing-section
          p.tagline Plan your wedding effortlessly,
            br
            | organise everything beautifully.
          p Find, book and manage everything
            br.hide-desktop
            | &nbsp;in one place.
          a.btn.btn-success(ng-click="openModal('register-modal')") REGISTER FOR FREE
      div
        section#landing-features
          .row.center-features
            .col-xs-12.col-md-4.col-md-push-4.col-lg-4.col-lg-push-4
              img.image-view(src="/vendor/images/iPhone.png")
            .col-xs-6.col-md-4.col-md-pull-4.col-lg-4.col-lg-pull-4.no-left
              ul
                li
                  .icon.icon-details.icon-notepad
                  span Receive daily task
                    br
                    |reminders
                li
                  .icon.icon-details.icon-storage
                  span Updates your budget
                    br
                    |automatically
                li
                  .icon.icon-details.icon-calendar
                  span Reminders every time
                    br
                    |a payment is due
            .col-xs-6.col-md-4.col-lg-4.no-right
              ul
                li
                  .icon.icon-details.icon-message
                  span Find all your vendors
                    br
                    |in one place
                li
                  .icon.icon-details.icon-star
                  span Review ratings & 
                    br
                    |testimonials
                li
                  .icon.icon-details.icon-toggle-switches
                  span Search by filter and
                    br
                    |chat direct
      div(ng-switch on="uiState.currentCard" ng-class="{ 'setHeight': !!uiState.currentCard }")
        .animate(ng-switch-when="start")
          section#inquiry.animate
            .card-section
              .card-label
                b READY TO PLAN YOUR WEDDING BETTER?
              .card-questionare
                p.onboard-label Let's get started!
                p Have you booked a venue?
                .row
                  .col-xs-12.col-md-6.col-md-push-5
                    a.btn.btn-success(ng-click="start(true)") YES
                  .col-xs-12.col-md-6.col-md-pull-5
                    a.btn.btn-gray(ng-click="start(false)") NO
        .animate(ng-switch-when="card1")
          onboard-card1
        .animate(ng-switch-when="card2")
          onboards-card2
        .animate(ng-switch-when="card3")
          onboards-card3
        .animate(ng-switch-when="suggest")
          onboard-suggestion
        .animate(ng-switch-when="category")
          onboard-category
        .animate(ng-switch-when="search")
          onboard-search
