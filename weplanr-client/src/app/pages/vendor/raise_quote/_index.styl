#raise-quote-container
  padding: 60px
  @media (max-width: 767px)
    padding: 20px
  .add-service
    color: $primary-hover
    font-weight: 500
  .duedate
    display inline-block
    width 110px
    color $primary-hover
  table
    td, th
      .ui-select-container.selectize-control
        display inline-block
        width 250px
      &.action
        padding 10px
      &.quote-date
        position relative
        i.fa.fa-calendar
          position absolute
          top 14px
          right 8px
    td:nth-child(n+3)
      text-align: right
    tfoot
      text-align: right
#raise-quote-container,#draft-quote-modal
  .btn
     padding 7px 22px

p#quote-details
  line-height: 28px
  padding-top 4px

#quote-table-row
  overflow-x scroll
table#quote-table
  width: 100%
  th
    text-align: left
  thead, tbody
    td, th
      padding: 8px 15px
      &:first-child
        padding: 4px
      &:nth-child(2)
        padding-left: 0
      &:nth-child(4), &:last-child
        min-width 135px
  tfoot
    td
      padding: 6px 15px
  .form-error
    font-size: 12px
    color: $primary-hover !important
    visibility: hidden
    white-space: nowrap
    &.show
      visibility: visible
  +respond-to(0, 1024px)
    #ui-select-service
      width: 186px
