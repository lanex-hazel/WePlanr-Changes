#customer-container
  margin: 15px
  +respond-to(0, 768px)
    margin: 0 0 15px
  .header
    height: 388px
    background-position: center
    background-repeat: no-repeat
    background-size: cover
    color: white
    box-shadow inset 2000px 0 0 0 rgba(39,43,47,0.3)
    width: calc(100% - 30px)
    margin: 0 15px
    +respond-to(0,768px)
      margin: 0
      width: 100%
    #countdown-timer
      font-size: 40px
      line-height: 0.75
      text-align: center
      +respond-to(0,768px)
        font-size: 20px
        margin-top: 60px
      .countdown
        +respond-to(0,768px)
          margin-top: 30px
        .countdown-item
          font-size 30px
          font-weight 200
          line-height 0.8
          padding-left 0.5rem
          padding-right 1.5rem
          -moz-transform: matrix( 2,0,0,2,0,0)
          -webkit-transform: matrix( 2,0,0,2,0,0)
          -ms-transform: matrix( 2,0,0,2,0,0)
          +respond-to(0,768px)
            font-size: 15px
        .countdown-label-item
          font-size 3.5px
          margin 15px
          opacity 0.6
          font-weight 400
          display block
          -moz-transform: matrix( 2,0,0,2,0,0)
          -webkit-transform: matrix( 2,0,0,2,0,0)
          -ms-transform: matrix( 2,0,0,2,0,0)
          +respond-to(0,768px)
            font-size: 2.3px
    #details
      margin-left: 30px
      
      
      li
        display: block
        line-height: 1.3
        font-size: 30px
        &:nth-child(2)
          font-size: 15px
          color: rgba(255, 255, 255, 0.6)
      .icon-map-marker:before
        font-size: 13px
        color: rgba(255, 255, 255, 0.6)

  .col-md-4
    width: 36%
    +respond-to(0, 1200px)
      width: 35.99%
    // +respond-to(0, 768px)
    //   width: calc(100% - 15px)
  .grid
    margin-top: 15px
    background-color: $primary-bg
    height: 242px
    padding: 15px 30px
    
    +respond-to(0, 768px)
      margin: 15px 15px 0
      width: calc(100% - 30px)
    &:nth-child(2)
      background-color: $light-green
      margin: 15px 15px 0
    &:nth-child(2), &:nth-child(3)
      text-align center
      li
        border-bottom: 0
        line-height: 2
        -moz-transform: matrix( 2,0,0,2,0,0)
        -webkit-transform: matrix( 2,0,0,2,0,0)
        -ms-transform: matrix( 2,0,0,2,0,0)
        font-size: 8px
        &:first-child
          font-size: 70px
          max-width: 200px
          margin: auto
          text-overflow: ellipsis
          overflow: hidden

    li
      display: block
      border-bottom: 1px solid rgba(47, 47, 47, 0.302)
      padding: 10px
      line-height: 2
      font-size: 15px
      position: relative
      color: rgba(32, 32, 32, 0.6)
      &:last-child
        border-bottom: 0
      .indicator
        position: absolute
        background-color: $primary-hover
        width: 10px
        height: 10px
        border-radius: 50%
        bottom: 20px
        left: 16px
        &.online
          background-color: rgb(171, 207, 133)
      img
        width: 20px
        height: 20px
        opacity: 0.6
    .active
      font-size: 12.5px
      color: rgba(56, 59, 64, 0.502)
      line-height: 2.5
