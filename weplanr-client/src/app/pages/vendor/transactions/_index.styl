#transaction-history
  padding 25px
  .content
    height 480px
    width: 100%
    overflow-y scroll
    margin-top: 15px
  b
    line-height 1.5
  a
    color $primary-hover
  table
    width 100%
    margin-top 16px
    &.invoice
      margin 18px 0
      background-color rgb(248, 248, 248)
      &.new
        background-color rgba(201, 230, 194, 0.2)
    &.quote
      border-bottom 2px solid rgba(220, 220, 220,0.302)
    > tbody
      width 100%
      tr.top > td
        padding-top 12px
      tr.bottom > td
        padding-bottom 20px
        .status
          font-size 14px
      td
        font-size 13px
        padding-left 12px
        padding-right 12px
        &:first-child
          width 70%
        &.common
          color rgba(56, 59, 64, 0.302)
        &.currency
          vertical-align: top
          font-weight: 500
        > span
          &.price
            font-size 28px
            white-space: nowrap
            font-weight: 500
          &.unpaid
            color $primary-hover
          &.paid
            color rgb(151, 200, 154) !important
  .options > li
    font-size: 11px
    border-right: 1px solid
    > a
      padding-right: 8px
      color: initial !important
      &.active
        font-weight: bold
    &:last-child
      border-right: 0
      > a
        padding-right: 0
