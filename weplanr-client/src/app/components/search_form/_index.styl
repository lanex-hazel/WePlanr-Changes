.search-form-container
  position relative
  margin-bottom 30px
  margin-left 2rem
  margin-right 2rem
  .search-label
    text-transform uppercase
    font-size 1.3rem
    line-height 1.2
    font-weight bold
    margin-bottom 15px
  .icon-search-position
    position relative
    &:before
      position absolute
      bottom 1.8rem
    +respond-to(0, 768px)
      display none
  .div-form
    border-bottom 2px solid $light-black
  .form-control
    height 38px
    &.search
      height 83px
      border 0
      // border-bottom 2px solid $light-black
      box-shadow 0 1px 0 0 transparent
      border-radius 0
      font-weight 400
      font-size 56px
      padding-left 46px
      width 1014px
      max-width 100%
      +respond-to(0, 768px)
        padding-left 0
      +respond-to(0, 425px)
        height 45px
        font-size 3rem
        width 215px
    &:focus
      outline none
      // border-bottom 2px solid $light-black
      box-shadow 0 1px 0 0 transparent
  .search-close
    position relative
    top -53px
    left -3px
    a
      padding 6px 10px
      border-radius 60%
      border 1px solid $border
      cursor pointer
      &:hover
        background-color transparent
    i
      margin-right 0
  .filter-search
    position relative
    top -3.8rem
    right 0
    span
      font-size 1.3rem
      color $primary-hover
      cursor pointer
      &:before
        font-weight normal
        font-size 1.5rem
        content '\e912'
        margin-right 10px
      &:after
        font normal normal normal 11px/1 FontAwesome
        content '\f0d7'
        margin-left 5px
      &:hover
        color $secondary-text
    .toggle-active
      color $secondary-text
    +respond-to(0,425px)
      top -2.8rem
      span
        font-size 1rem
        &:before
          font-size 1rem
          margin-right 5px
        &:after
          font normal normal normal 8px/1 FontAwesome
.filter-options
  position relative
  padding-left 20px
  +respond-to(0, 768px)
    padding-left 0
  .date
    border 0
    border-bottom 2px solid rgba(56, 59, 64, 0.302)
    border-radius 0
    box-shadow 0 1px 0 0 transparent
    height 49px
    font-size 1.8rem
    line-height 1.5
    color rgb(56, 59, 64)
    +respond-to(0, 425px)
      font-size 1.3rem
    &:focus
      border-bottom 2px solid rgba(56, 59, 64, 0.302)
  .date[readonly]
    cursor: pointer
    background-color $white
  .clickable-calendar
    position relative
    left 91%
    top -33px
    font-size 16px
    +respond-to(0, 425px)
      font-size 1.3rem
  .filter-label
    color rgba(39, 43, 47, 0.302)
    text-transform uppercase
    font-size 1.1rem
    font-weight bold
    +respond-to(0, 425px)
      font-size 1rem
  .selectize-control.single .selectize-input
    border 0
    border-bottom 2px solid rgba(56, 59, 64, 0.302)
    border-radius 0
    background-image none
    background-color $white
    height 49px
    font-size 1.8rem
    padding-left 0
    padding-right 0
    +respond-to(0, 425px)
      font-size 1.3rem
  .selectize-control.single .selectize-input input
    height 32px
    font-size 1.8rem
    +respond-to(0, 425px)
      font-size 1.3rem
  .selectize-control.single .selectize-input:after
    font normal normal normal 11px/1 FontAwesome
    border 0
    content '\f0da'
    color $primary-hover
  .selectize-control.single .selectize-input span
    line-height 2
    font-weight 500
    text-transform capitalize
  .selectize-input.selectize-focus
    border-color rgba(56, 59, 64, 0.302) !important
  .location
    .selectize-control.single .selectize-input span:before
      font normal normal normal 12px/1 FontAwesome
      content '\f041'
      color $secondary-text
      margin-right 10px
.reset-filter-container
  background-color rgba(145, 145, 145,0.102)
  padding 0
  a
    color rgba(39, 43, 47, 0.8)
    line-height 1.2
    font-weight 400
  .form-group
    margin 5px