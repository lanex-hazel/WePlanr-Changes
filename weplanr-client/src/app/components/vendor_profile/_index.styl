#vendor-profile
  font-size 1.25rem
  -webkit-font-smoothing antialiased

  .inner-container
    padding-top 0.2rem
    padding-bottom 2rem
    +respond-to(0,768px)
      border-bottom 1px solid rgba(56, 59, 64, 0.102)
      margin-bottom 15px
      &.abn,&.more
        border-bottom 0
        margin-bottom 0

  .icon:before, .icon-f:before
    font-size 1.7rem
    padding 1.4rem
    border 1px solid rgba(56, 59, 64, 0.2)
    vertical-align middle
    cursor pointer

  .icon-f:before
    font-size 2.3rem
    padding 1rem

  .icon-exit
    position absolute
    top 7px
    right 30px
    z-index 1
    &:before
      padding: 0.5rem
    +respond-to(0, 768px)
      right 16px
  #avatar-photo
    width 70%
    max-width 180.59px
    height 180.59px
    background-size cover
    background-position center
    background-color: $white
    background-repeat: no-repeat
    border-radius 50%
    border 1px solid $white
    position absolute
    top -650%
    left 45px
    &.default
      background-color: $default-photo-bg
      background-size: 98%
    +respond-to(993px,1100px)
      width 180.59px
    +respond-to(0, 992px)
      width: 50%
      max-width: 132.5px
      height: 132.5px
      top: -500%
      left: 30px
      
  #contact-details
    position relative
    z-index 2
  #name
    display inline-block
    margin 0
    font-size 35px
    line-height 1
    font-weight 300
    -webkit-font-smoothing antialiased
    +respond-to(0,480px)
      font-size 23px
  .icon-map-marker
    display inline-block
    -webkit-font-smoothing antialiased
    &:before
      font-size 10px
      border: 0
      padding-left: 0
      padding-right: 3px
  +respond-to(0, 992px)
    #contact
      margin-top 45px
  #location-address
    padding-top: 12px
    padding-left: 7px
    +respond-to(0,768px)
      padding-left: 3px
  .carousel-dots
    position absolute
    bottom 35px
    right 30px
    z-index 2
    +respond-to(0,480px)
      right 5px
      bottom 15px
    i.fa
      font-size 12px
      color $white
      display none
      &.active
        color rgb(206, 66, 87)
      &.show
        display block

  .box-overlay
    box-shadow 0px 1px 76px 0px rgba(0, 0, 0, 0.05) inset

  #location-map
    transition(all linear 0.5s)
    height 500px
    z-index 10
    width 865px
    left -30px
    bottom -20px
    +respond-to(0,768px)
      position inherit
      max-width 100%
      left 0
      height 240px

  .option-link
    color $primary-hover
    vertical-align sub
    &.more
      vertical-align initial
      text-transform initial
      font-size 1.25rem

  .title-label
    text-transform uppercase
    line-height 1.2

  .btn-msg
    max-width: 191px
    +respond-to(993px, 1200px)
      max-width: 154px
    +respond-to(481px, 992px)
      width: 42.5%
      max-width: initial
  .btn-fave
    margin-left: 7px
    vertical-align: inherit
    +respond-to(993px, 1120px)
      vertical-align: super
  .btn-green
    padding: 12px 24px !important
    font-size: 19px !important
    line-height: 22px !important
    font-weight 700 !important
    text-align center

  .detail-container
    padding-top 10px
    width: auto
    overflow: hidden
    text-overflow: ellipsis
  .btn-list
    padding-top: 9px
  .btn-actions
    padding-top: 15px
    padding-left: 30px
    text-align: left
    &.contact
      padding-left: 15px
      +respond-to(0,768px)
        padding-left: 29px
    &.buttons
      padding-left: 0
      padding-right: 0
      +respond-to(0, 768px)
        padding-top: 5px
        padding-left: 30px
        padding-right: initial

  .abn
    .verified
      color #87c240
      font-size 11px
      padding 2px 5px
      &.not
        color rgba(56, 59, 64, 0.4) !important

  .about
    display block
    display -webkit-box
    height 500px
    margin 0 auto
    line-height 1.8
    -webkit-line-clamp 3
    overflow hidden
    white-space pre-line
    overflow: auto
    +respond-to(0, 992px)
      height: auto
    &.less
      height: 202px
      overflow: hidden
      +respond-to(0, 768px)
        height 156px

  .ratings
    padding 0 5px 5px
    .icon:after
      color $unfill
      font-size 2rem
      margin-right 0
    .fill:after
      color $yellow

  .tags
    height 32px
    overflow hidden
    &.see-all
      height auto
    & > li
      border solid 1px rgba(39, 43, 47, 0.5)
      padding 0.5rem 1rem
      width auto
      color: $primary-text
      background-color $white
      font-size 1.1rem
      margin 3.5px
      text-transform uppercase
      &:first-child
        margin-left 0

  .service-location > li
    text-transform capitalize
    .icon-map-marker
      display inline-block
      &:before
        color $primary-text
        font-size 8px
        font-weight normal
        vertical-align initial

  .social-links
    padding 3px 20px
    &:first-child
      padding-left 0
    img
      opacity 0.6
      width 23px
      height 23px
      +respond-to(0,768px)
        width 30px
        height 30px

  #packages
    overflow hidden
    &.see-all
      height auto
      td.service
        white-space: initial
    table
      border-collapse collapse
      table-layout fixed
      width 100%
      td
        color $light-black
        text-transform capitalize
        font-weight 500
        line-height 2.4
        &.service
          font-weight 400
          color $gray
          padding 2.5px 0
          width 60%
          text-overflow ellipsis
          overflow hidden
          white-space nowrap

  calendar
    width 100%
    height 280px
    padding-top 0.6rem
    margin 0 auto 2rem
    margin-bottom 3px
    +respond-to(0,480px)
      width 93%
      display block
    +respond-to(0,800px)
      margin-bottom 30px
    .calendar-header
      height 31px
      line-height 28px !important
      margin-bottom 5px
      +respond-to(0, 768px)
        width: calc(100% - 57px)
      +respond-to(0, 750px)
        width: calc(100% - 28px)
      +respond-to(0, 420px)
        width: calc(100% - 16px)
      +respond-to(0, 320px)
        width: 100%
      [class*='icon-']:after
        padding 0 1.2rem
        font-size 1rem
      span
        font-weight 500
        text-transform capitalize
        +respond-to(0,768px)
          text-transform uppercase
    .week> td
      +respond-to(0, 768px)
        width: 102px
      &.names
        font-weight: 500 !important
        .day
          margin 0
    +respond-to(0,480px)
      .icon-arrow-left
        left -65px
      .icon-arrow-right
        left -25px

  .carousel
    color #fff
    overflow hidden
    position relative

  .carousel-item
    opacity 0
    pointer-events none
    position absolute
    top 0
    transition(opacity 0.6s ease-in-out)
    width 100%
    box-shadow inset 2000px 0 0 0 rgba(39,43,47,0.3)
    height 523px
    background-size cover
    background-position top center
    background-repeat no-repeat
    img
      display block
      height 523px
      width 100%
      object-fit cover
      object-position top
      &.default
        object-fit contain
        object-position center
    +respond-to(0,768px)
      height 280px
      img
        height 280px
    +respond-to(0,480px)
      height 220px
      img
        height 220px
    .shadow
      position absolute
      top 0
      left 0
      width 100%
      height 100%
  .carousel-active
    opacity 1
    pointer-events auto
    position static
    &.animate
      transition(all linear 0.5s)
      opacity 1
    .carousel-caption
      transition(opacity 0.6s ease-in)
      opacity 1

  .carousel-controls
    height: 100%
    width: 100%
    [class*='icon-']
      position absolute
      line-height 30px !important
      top 45%
      z-index 2
      &:after
        font-size 40px
        color $white
        cursor pointer
        +respond-to(0,768px)
          display none
    .icon-arrow-right
      right 30px
    .icon-arrow-left
      left 30px

  .carousel-control
    background: rgba(0, 0, 0, 0.2)
    cursor: pointer
    font-size: 28px
    height: 100%
    line-height: 40px
    text-align: center
    transition: background 0.1s ease-in-out
    width: 50%
    z-index: 2

  #portfolio-slideshow
    margin auto
    width 540px
    max-width 100%
    overflow hidden
    overflow-x scroll
    white-space nowrap
    position relative
    padding 1px
    li
      max-width 161.5px
      height 115.5px
      img
        max-width 100%
        height 100%
      &.default
        margin 3px
        padding 1px

  +respond-to(0,768px)
    .block-content
      padding 0
    #packages
      height 180px
