.carousel-container(ng-if="$ctrl.vendor.photo_urls.length > 0")
  ul.carousel(rn-carousel rn-carousel-index="slideIndex2" rn-carousel-auto-slide)
    li(ng-repeat="photo in $ctrl.vendor.photo_urls" ng-if="$ctrl.vendor.photo_urls.length > 0")
      img.bg-image(ng-src="{{$root.setPhoto(photo.url)}}")
  #thumbnail-container.col-md-12.no-padding
    img.thumb(ng-repeat="photo in $ctrl.vendor.photo_urls" ng-click="$parent.slideIndex2=$index" ng-src="{{$root.setPhoto(photo.url)}}")