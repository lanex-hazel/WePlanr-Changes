modal#new-card.show.in
  form(ng-submit="submit()")
    .modal
      .modal-body
        a.pull-right.icon.icon-exit(ng-click="cancel()")
        section
          p {{title || 'New Bank Card'}}
        section
          .form-group
            label.form-label Full Name
            input.form-control(ng-model="newCard.name" required="true" pattern="^[a-zA-Z]+( [a-zA-Z]+)+$")
          .form-group
            label.form-label Number
            input.form-control(ng-model="newCard.number" type="number" pattern="[0-9]+" required="true")
          .form-group
            label.form-label Expiry Month
            select.form-control(ng-model="newCard.exp_month" required=true)
              option(value="") Select Month
              option(value="1") January
              option(value="2") February
              option(value="3") March
              option(value="4") April
              option(value="5") May
              option(value="6") June
              option(value="7") July
              option(value="8") August
              option(value="9") September
              option(value="10") October
              option(value="11") November
              option(value="12") December
          .form-group
            label.form-label Expiry Year
            select.form-control(ng-model="newCard.exp_year" required=true)
              option(value="") Select Year
              option(ng-repeat="year in yearOptions" value="{{year}}")
                | {{year}}
          .form-group
            label.form-label CVC
            input.form-control(ng-model="newCard.cvc" type="password" required="true")
          br
        section(ng-hide="loading")
          .hide-mobile
            a.btn.btn-gray(ng-click="cancel()") CANCEL
            | &nbsp;&nbsp;&nbsp;&nbsp;
            button.btn.btn-green SAVE CARD
          .hide-desktop
            button.btn.btn-green SAVE CARD
            br
            a.btn.btn-gray(ng-click="cancel()") CANCEL
        section(ng-show="loading")
          spinner
    .modal-backdrop
