.account-settings-container
  .inner-block-container
    padding 30px 15%
  
  .block-footer
    background-color $unfill
  .radio-form-control
    margin 5px 10px 0 0
  .radio-option-text
    color $primary-text
    margin-right 25px
    font-weight 500

  .edit-link
    color $primary-hover
    font-weight 500
    text-transform uppercase
    font-size 12px
    padding-left 10px
  
  input[type='radio']
    -webkit-appearance none
    width 20px
    height 20px
    border 1px solid #dddddd
    border-radius 50%
    outline none
    position relative
    top 5px
  input[type='radio']:before
    content ''
    display block
    width 60%
    height 60%
    margin 20% auto    
    border-radius 50%
  input[type='radio']:checked:before
    background-color $primary-hover

  .account, .add-account
    width: 270px
    max-width: 82%
    height: 160px
    float: left
    margin-bottom: 2rem
    @media (min-width: 426px)
      &:nth-child(odd)
        margin-right: 30px
    @media (max-width: 426px)
      margin-left: 3rem
  .account
    border-radius: 10px
    padding-top: 60px
    padding-left: 20px
    background-color: #70c0ed
    color: white
    font-size: 17px
    font-weight: 300
    &.card
      background-color: #f7f8f9
      color: #555
      img
        //width: 50px
        height: 23px
        margin-bottom: 8px
  .add-account
    border: 3px dashed #ccc
    color: #ccc
    padding-top: 40px
    text-align: center
    font-size: 14px
    i.fa
      font-size: 35px
      margin-bottom: 8px
