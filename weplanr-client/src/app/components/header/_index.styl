.header-container
  position fixed
  top -1px
  z-index 500
  width 100%
  margin-left 0!important
  margin-right 0!important

  .mobile-breadcrumb
    background-color: #f8f2f2
    .search-title
      color rgba(206, 66, 87, 0.8)
      font-weight 500
      max-width 100%
      padding: 10px
      &.icon-arrow-leftb:before
        font-weight normal
        font-size 1.5rem
        color rgb(56, 59, 64)
      .keyword
        color rgba(94, 95, 99, 0.8)
        overflow hidden
        white-space nowrap
        text-overflow ellipsis
        width 320px
        display inline-block
        vertical-align top
        text-align left
        +respond-to(0,512px)
          width: 151px
        +respond-to(0, 320px)
          width: 96px
  .header
    background $primary-bg
    width 1152px
    max-width 100%
    margin 0 auto
    position relative

    nav
      max-width 100%
      margin auto
      +respond-to(0, 1150px)
        max-width 98%
    +respond-to(0, 768px)
      nav ul
        margin-right 0.5rem
        margin-left 0.5rem
    nav li
      display inline-block
      padding 2.5rem 0 0 1rem
      +respond-to(0, 768px)
        &.pull-left
          padding-top 2.3rem
      &.pull-right
        padding-top 2rem
        padding-left 0.8rem
        padding-right 0
        +respond-to(0, 768px)
          padding-top 1.7rem
      &.toggle-menu
        padding-top 2rem
        +respond-to(0, 768px)
          padding-top 1.7rem
      &.text-links
        padding-top 1.8rem
        +respond-to(0, 768px)
          padding-top 2.3rem
        +respond-to(0, 480px)
          padding-left 0
        +respond-to(0, 360px)
          padding-top 2.5rem
        > a
          font-size 1.4rem
          &.page-label
            padding-top 0
            font-size 2rem
          +respond-to(0, 768px)
            font-size 1.2rem
          +respond-to(0, 360px)
            font-size 10px
        +respond-to(1000px, 0)
          padding-top 2rem
      a
        padding 0
      &.vendor:hover
        color: $light-pink
      &.user:hover
        color: $light-blue
      .icon-search:before, .icon-exit:before
        font-size 1.4rem
        padding 0.8rem
        border 1.4px solid rgba(0, 0, 0, 0.102)
        border-radius 50%
        vertical-align -webkit-baseline-middle
      .icon-exit:before
        font-size 1.8rem
        padding 0.5rem
      .icon-menu:before
        vertical-align top
        padding-right 1.3rem
        +respond-to(0,360px)
          padding-right 8px
      .icon-after:after
        font-size 5px
        font-weight normal
        position absolute
        right 10px
        top 40%
      .btn
        font-size 1.5rem
        font-weight 400
        padding 0.6rem 1.5rem
        position relative
      .btn-clear-border
        padding-top 0.5rem
        padding-bottom 0.5rem
        &.icon-after:after
          color rgb(206, 66, 87)
        &.vendor:hover
          background-color: rgba(206, 66, 87, 0.78)
          border: 1px solid transparent
          color: $white
          &.icon-after:after
            color: $white
        &.user:hover
          background-color: #adddf1
          color: $white
          border: 1px solid transparent
          &.icon-after:after
            color: $white
      .search-title
        color rgba(206, 66, 87, 0.8)
        font-weight 500
        width 300px
        &.icon-arrow-leftb:before
          font-weight normal
          font-size 1.5rem
          color rgb(56, 59, 64)
        .keyword
          color rgba(94, 95, 99, 0.8)
          overflow hidden
          white-space nowrap
          text-overflow ellipsis
          width calc(100% - 173px)
          display inline-block
          vertical-align top
          text-align left
      #username
        overflow hidden
        text-overflow ellipsis

    .header-logo
      max-width 38%
      height 17px
      margin 0 auto
      position absolute
      top 2.5rem
      left 50%
      transform translate(-50%, 0%)
      z-index 10
      cursor pointer
      +respond-to(0, 414px)
        left 49.5%
        max-width 35%
        height 15px
      +respond-to(0, 320px)
        max-width 27%
        height 12px
        top 2.7rem
        left 49%

  #avatar
    width 32px
    height 32px
    background-size cover
    background-position center
    background-repeat: no-repeat
    background-color: $white
    border-radius 50%
    &.default
      background-size: 98%
      background-color: $default-photo-bg

  .header-dropdown,.mobile-header-dropdown
    position relative
    // min-width 156px
    &:hover, &:active, &:focus
      .dropdown
        display block
    .dropdown
      position absolute
      display none
      top 19px
      right 0
      background-color #fff
      border-radius 9px
      z-index 100
      +respond-to(0, 768px)
        top 32px
        right -42px
        border-radius 10px
        ul
          margin 0
          width 83px
      li
        border-bottom 1px solid rgb(248, 248, 248)
        display block
        padding 0
        &:first-child:hover
          background-color transparent
        &:last-child
          border-bottom 0px
          &:hover
            border-bottom-left-radius 9px
            border-bottom-right-radius 9px
        &:hover
          background-color rgb(248, 248, 248)
        a
          font-size 1.4rem
          font-weight 400
          color rgba(56, 59, 64, 0.6)
          position relative
          padding 0.5rem 1.7rem
          line-height 2
          &:hover
            color rgb(56, 59, 64)
            border 0
          &.icon-after:after
            font-size 3px
            font-weight normal
            position absolute
            right 10px
            top 43%
            color rgb(206, 66, 87)

@media (max-width 768px)
  .header-container .header
    background-color $white
    max-width 100%
    border-bottom 1px solid rgba(75, 77, 82,0.102)