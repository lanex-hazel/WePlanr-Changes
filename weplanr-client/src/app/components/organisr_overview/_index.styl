#overview
  padding: 14px !important
  margin-left: 0
  +respond-to(1200px, 0)
    padding: 42.5px !important
    height: 328px
  .title
    font-size: 14px;
    letter-spacing: -0.5px
    +respond-to(1200px, 0)
      border-radius: 20px
      background-color: #f9ce48
      font-size: (@font-size + 2)
      color: #ffffff
      padding: 2px 10px
      width: 90px
      text-align: center
      margin-bottom: 21px
  .budget-bar
    margin-top: 9px
    > .description
      font-size: 12px
      letter-spacing: -0.4px
      color: #4a4a4a
      +respond-to(1200px, 0)
        font-size: 18px
     > .description  > .black
        color: #000000
        font-weight: 400
    > .budget-progress-bar
      height: 15px
      width: 173px
      max-width: 173px
      margin-top: 5px
      display: inline-block
      &.space
        margin-right: 10px
      +respond-to(1200px, 0)
        margin-top: 18px
        &.space
          margin-right: 30px
      &.green
        background-color: #31cc71
      &.yellow
        background-color: #fdda6d
        max-width: 192px
      &.red
        background-color: #fa6577
        max-width: 192px
    > .amount-box
      display: inline-block
      > .amount
        vertical-align: top
        display: inline-block
      > .link
        font-size: 10px
        font-weight: bold
        letter-spacing: -0.4px
        color: #d04055
        float: right
        line-height: 2
        margin-right: 6px
        margin-left: 6px
      > .form-control
        width: 70px
        background-color: transparent
        display: inline-block
        font-size: inherit
        height: 19px
        line-height: 1
        padding: 0
        border-radius: 0