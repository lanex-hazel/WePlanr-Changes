.profile-settings-container
  div[id="map"]
    height 200px
    width 100%
    margin 15px 0
  
  .edit-link
    color $primary-hover
    font-weight 500
    text-transform uppercase
    font-size 12px
    padding-left 10px
   .add-link
    color $primary-hover
    font-weight 500
    font-size 12px
    padding-left 10px
    &.avatar
      text-transform uppercase
    &:before
      font normal normal normal 8px/1 FontAwesome
      border 0
      content '\f067'
      margin 5px
  
  .img-container
    width 42px !important
    height 42px !important
  
  .location-item
    position relative
    a
      &.remove-item
        padding 5px 12px
    .icon-exit:before
      padding 0
      border 0
      font-size 10px !important
      color $primary-hover !important

    .location-item-remove
      position absolute
      left -1px
      top 0
  
  .location-form
    position relative
    display block
    color $secondary-text
    &:before
      content "\e903"
      position absolute
      bottom 8px
      font-size 10px
      z-index 1
    .form-control
      color $secondary-text
      padding-left 2rem

  .price-form
    position relative
    display block
    &:before
      font normal normal normal 16px/1 FontAwesome
      content '\f155'
      position absolute
      top 12px
      z-index 1
    &.right
      &:before
        right 56px
    .form-control
      padding-left 2rem
  
  .selectize-control.single .selectize-input
    border 0
    border-bottom 1px solid $border
    border-radius 0
    background-image none
    background-color $white
    height 49px
    font-size 16px
  .selectize-control.single .selectize-input input
    height 32px
    font-size 16px
  .selectize-control.single .selectize-input:after
    font normal normal normal 8px/1 FontAwesome
    border 0
    content '\f0da'
    color $primary-hover
  .selectize-control.single .selectize-input span
    line-height 2
    font-weight 500
    text-transform capitalize
  .selectize-input.selectize-focus
    border-color $border !important
  .selectize-dropdown-content
    text-transform capitalize
  
  .ui-select-multiple.ui-select-bootstrap .ui-select-match-item, #primary-service li
    font-size 12px
    border solid 1px rgba(39, 43, 47, 0.5)
    margin 0 5px 10px
    padding 4px 8px
    background-color: $white
    color: $primary-text
  .ui-select-multiple.ui-select-bootstrap .ui-select-match-item:first-child
    margin-left 0
  .ui-select-choices-group
    width 100%
  .form-control[disabled]
    background-color transparent !important
    cursor none
  #primary-service
    position absolute
    top 23px
    padding 4px 0 0 0
    li
      padding-bottom 5px
    @media screen and (max-width: 768px)
      top 18px
  .services.ui-select-container.ui-select-multiple::after
    content: "\e91a"
    position: absolute
    bottom: 10px
    right: 6px
    font-size: 5px
    color: $primary-hover

  .ui-select-multiple.ui-select-bootstrap .ui-select-match .close
    color: $primary-text
    opacity: 1
    text-shadow: 0 1px 0 #000
