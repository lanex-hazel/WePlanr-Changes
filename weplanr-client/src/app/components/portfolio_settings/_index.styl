.portfolio-settings-container
  .inner-block-container
    padding 15px 30px
  .title
    font-size 1.7em
    font-weight 100
    display inline-block
    padding-left 10px
  
  .add-link
    color $primary-hover
    font-weight 500
    font-size 12px
    &:before
      font normal normal normal 8px/1 FontAwesome
      border 0
      content '\f067'
      margin 5px
  
  .image-block-container
    padding 30px 10px

  .img-display-container
    max-width 100%
    height 180px
    position relative
    margin 10px 0

    .show-image
      width 100%
      height 100%
      position relative
      background-size auto 100%
      background-repeat no-repeat
      background-position center
      background-color rgba(39,43,47,0.3)
      img
        width 100%
        height 100%
        object-fit contain
    .show-image:hover, .isCover
      box-shadow inset 2000px 0 0 0 rgba(39,43,47,0.3)
      transition all 0.5s
      -webkit-transition all 0.5s
      .icon
        display block
        position absolute
        right 8px
        top 5px
        &:before
          color $white
    .icon
      position absolute
      display none
    .icon-cover
      display block
      position absolute
      bottom 18px
      left 7px
      z-index 1
      &:after,&:before
        font-size 15px
        border-radius 50%
        background-color rgba(255,255,255,0.6)
        padding 15px 16px
      &:after
        color rgb(247, 236, 205)

  .img-upload-container
    border 2px dashed #dddddd
    max-width 100%
    height 180px
    margin 10px 0
    cursor pointer
    &.icon:before
      color #dddddd
      font-size 22px
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
  
  .lr p
    position absolute
    bottom -40px
    left 0px
    color red
    margin 0