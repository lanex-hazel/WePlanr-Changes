transition(args)
  -webkit-transition args
  -moz-transition args
  -ms-transition args
  -o-transition args
  transition args

.animate.ng-enter
  transition(0.5s linear opacity)
  opacity: 0
  display: block !important

.animate-hide, .animate-show
  -webkit-transition: all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.5s
  -moz-transition: all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.5s
  -o-transition: all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.5s
  transition: all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.5s

.animate-hide
  opacity: 1
  display: block !important

.animate-hide.animate-hide-active
  opacity: 0
  display: block !important

.animate-show
  opacity: 0
  display: block !important
  
.animate-show.animate-show-active
  opacity: 1
  display: block !important

.animate.ng-enter.ng-enter-active
  opacity: 1
  display: block !important

.fade2.ng-hide
  opacity: 0
  // transition: all opacity 0.5s

.fade2.ng-hide-remove, .fade2.ng-hide-add
  display: block !important

.fade2.ng-hide-remove
  transition: all opacity 0.10s
  -wexbkit-transition all opacity 0.10s

.fade2.ng-hide-add
  transition: all opacity 0.5s
  -webkit-transition all opacity 0.5s

.animate-item.ng-move, .animate-item.ng-enter, .animate-item.ng-leave
  -webkit-transition all linear 0.5s
  transition all linear 0.5s

.animate-item.ng-leave.ng-leave-active, .animate-item.ng-move, .animate-item.ng-enter
  opacity 0

.animate-item.ng-leave, .animate-item.ng-move.ng-move-active, .animate-item.ng-enter.ng-enter-active
  opacity 1