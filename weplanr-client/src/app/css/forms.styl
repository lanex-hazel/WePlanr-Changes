.custom-radio
  -webkit-appearance none
  width 20px
  height 20px
  border 1px solid #dddddd
  border-radius 50%
  outline none
  position relative
  top 5px
  &:before
    content ''
    display block
    width 60%
    height 60%
    margin 20% auto
    border-radius 50%
  &:checked:before
    background-color $primary-hover

input.has-error, input.has-error:focus
  border-bottom 1px solid #e07a5f
.form-control
  padding  5px 5px
  border 0
  border-bottom 1px solid $border
  border-radius 0
  box-shadow none
  &:focus
    border 0
    border-bottom 1px solid $border
    box-shadow none
  &:focus::-webkit-input-placeholder
    color: transparent
  &:focus::-moz-placeholder
    color: transparent
  &:focus:-moz-placeholder
    color: transparent
textarea
  .form-control
    width 50%

.form-control
  &::-webkit-input-placeholder
    font-style: italic
    font-weight: 300
    color: rgba(0, 0, 0, 0.3)
  &:-moz-placeholder
    font-style: italic
    font-weight: 300
    color: rgba(0, 0, 0, 0.3)
  &::-moz-placeholder
    font-style: italic
    font-weight: 300
    color: rgba(0, 0, 0, 0.3)
  &:-ms-input-placeholder
    font-style: italic
    font-weight: 300
    color: rgba(0, 0, 0, 0.3)
  &:focus::-webkit-input-placeholder
    color: transparent
  &:focus::-moz-placeholder
    color: transparent
  &:focus:-moz-placeholder
    color: transparent

.select-dropdown
  position relative
  width 20%
  margin auto
  display inline-block
  padding 1rem
  &.block
    width: 100% !important
  > .select-form
    font-size 2rem
    line-height 1.5
    border-radius 0
    color #000000
    -webkit-appearance none
    -moz-appearance none
    appearance none
  &:after
    position absolute
    right 15px
    bottom 30px
    z-index 1
    text-align center
    pointer-events none
    box-sizing border-box
    content "\e91a"
    color #ce4257
    font-size 7.5px
    font-weight normal

.input-location
  &:before
    content "\e903"
    color rgba(56,59,64,0.6)
    font-size 1.2rem
    font-weight normal
    position relative
    left 15px
  > .form-control
    margin none
    display inline-block
    padding-left 20px

.ui-select-custom
  > .ui-select-choices > li
    width: 100%

.form-group-suggest
  position: relative
  > .dropdown
    position: absolute
    top: 58px
    background-color: $white
    border: 2px solid $border
    border-top: 0
    height: auto
    overflow: scroll
    padding: 0
    width: 100%
    z-index: 2
    &.results
      height: 110px
  > .dropdown > li
    display: block
    list-style: none
    padding: 4px 8px
  > .dropdown > li > a:hover, a:focus
    color: $primary-hover
    text-decoration: underline
